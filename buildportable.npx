// buildportable.npx
// builds NppToRPortable distribution
// 

set exe7zip = 7z 
set parms7z= a -sfx7z.sfx -mx9 
set DirPortable = NppToRPortable
set package = NppToRPortable-$(version).paf.exe

// copy files
xcopy "NppEditsR\NppEditR.exe" "$(DirPortable)\App\NppToR\NppEditR.exe" /R /Y /V /i
xcopy "NppToR.exe" "$(DirPortable)\App\NppToR\NppToR.exe" /R /Y /V /i

$(exe7zip) $(parms7z) $(package) $(DirPortable)
$(exe7zip) d $(package) *.svn -r

